<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.o2.metadata.console.infra.mapper.CarrierMapper">
    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap id="BaseResultMap" type="org.o2.metadata.console.infra.entity.Carrier">
        <result column="carrier_id" property="carrierId" jdbcType="DECIMAL"/>
        <result column="carrier_code" property="carrierCode" jdbcType="VARCHAR"/>
        <result column="carrier_name" property="carrierName" jdbcType="VARCHAR"/>
        <result column="carrier_type_code" property="carrierTypeCode" jdbcType="VARCHAR"/>
        <result column="active_flag" property="activeFlag" jdbcType="DECIMAL"/>
        <result column="OBJECT_VERSION_NUMBER" property="objectVersionNumber" jdbcType="DECIMAL"/>
        <result column="CREATION_DATE" property="creationDate" jdbcType="TIMESTAMP"/>
        <result column="CREATED_BY" property="createdBy" jdbcType="DECIMAL"/>
        <result column="LAST_UPDATED_BY" property="lastUpdatedBy" jdbcType="DECIMAL"/>
        <result column="LAST_UPDATE_DATE" property="lastUpdateDate" jdbcType="TIMESTAMP"/>
        <result column="tenant_id" property="tenantId" jdbcType="DECIMAL"/>
        <result column="delivery_region_type_code" property="deliveryRegionTypeCode" jdbcType="VARCHAR"/>
        <result column="priority" property="priority" jdbcType="DECIMAL"/>
        <result column="template_code" property="templateCode" jdbcType="VARCHAR"/>
        <result column="volume_conversion" property="volumeConversion" jdbcType="DECIMAL"/>
    </resultMap>

    <resultMap id="carrierLogisticsCostMap" type="org.o2.metadata.console.app.bo.CarrierLogisticsCostBO">
        <result column="carrier_code" property="carrierCode" jdbcType="VARCHAR"/>
        <result column="volume_conversion" property="volumeConversion" jdbcType="DECIMAL"/>
        <result column="template_code" property="templateCode" jdbcType="VARCHAR"/>
        <result column="valuation_type" property="valuationType" jdbcType="VARCHAR"/>
        <result column="valuation_uom" property="valuationUom" jdbcType="VARCHAR"/>
        <collection property="carrierLogisticsCostDetailList"
                    ofType="org.o2.metadata.console.app.bo.CarrierLogisticsCostDetailBO">
            <id column="template_detail_id" property="templateDetailId" jdbcType="DECIMAL"/>
            <result column="region_code" property="regionCode" jdbcType="VARCHAR"/>
            <result column="first_piece_weight" property="firstPieceWeight" jdbcType="DECIMAL"/>
            <result column="first_price" property="firstPrice" jdbcType="DECIMAL"/>
            <result column="next_piece_weight" property="nextPieceWeight" jdbcType="DECIMAL"/>
            <result column="next_price" property="nextPrice" jdbcType="DECIMAL"/>
        </collection>
    </resultMap>

    <select id="listCarrier" resultType="org.o2.metadata.console.infra.entity.Carrier">
        <bind name="lang" value="@io.choerodon.mybatis.helper.LanguageHelper@language()"/>
        SELECT c.carrier_id,
               c.carrier_code,
               ct.carrier_name,
               c.carrier_type_code,
               c.OBJECT_VERSION_NUMBER,
               c.active_flag,
               c.delivery_region_type_code,
               c.priority,
               c.template_code,
               c.volume_conversion,
               ft.template_name,
               c.tenant_id
        FROM o2md_carrier c
                     left join o2md_carrier_tl ct
                     left join o2md_freight_template ft on ft.template_code = ct.template_code and ft.tenant_id= ct.tenant_id
                on ct.carrier_id = c.carrier_id and ct.lang = #{lang} and ct.tenant_id = #{tenantId}
                where 1 = 1
        <choose>
            <when test="tenantId != null">
                and c.tenant_id = #{tenantId}
            </when>
            <otherwise>
                AND 1 = 0
            </otherwise>
        </choose>
        <if test="carrierId != null">
            and c.carrier_id = #{carrierId}
        </if>
        <if test="carrierCode != null and carrierCode != ''">
            <bind name="carrierCodeLike" value="'%' + carrierCode + '%'"/>
            and c.carrier_code like #{carrierCodeLike}
        </if>
        <if test="carrierName != null and carrierName != ''">
            <bind name="carrierNameLike" value="'%' + carrierName + '%'"/>
            and c.carrier_name like #{carrierNameLike}
        </if>
        <if test="carrierTypeCode != null and carrierTypeCode != ''">
            and c.carrier_type_code = #{carrierTypeCode}
        </if>
        <if test="carrierCodes != null and carrierCodes.size() > 0">
            and c.carrier_code IN
            <foreach collection="carrierCodes" item="code" open="(" separator="," close=")">
                #{code}
            </foreach>
        </if>
        <if test="activeFlag != null">
            and c.active_flag = #{activeFlag}
        </if>
    </select>
    <select id="batchSelect" resultType="org.o2.metadata.console.infra.entity.Carrier">
        <bind name="lang" value="@io.choerodon.mybatis.helper.LanguageHelper@language()"/>
        SELECT c.carrier_code,
               c.carrier_type_code,
               c.active_flag,
               c.priority,
               tl.carrier_name
        FROM o2md_carrier c
                     left join o2md_carrier_tl tl
                on tl.carrier_id = c.carrier_id and tl.tenant_id = #{tenantId} AND tl.lang = #{lang}
                WHERE 1 = 1
        <choose>
            <when test="tenantId != null">
                AND c.tenant_id = #{tenantId}
            </when>
            <otherwise>
                AND 1 = 0
            </otherwise>
        </choose>
        <if test="carrierDTO.carrierCodes != null and carrierDTO.carrierCodes.size > 0">
            and c.carrier_code IN
            <foreach collection="carrierDTO.carrierCodes" item="code" open="(" separator="," close=")">
                #{code}
            </foreach>
        </if>
        <if test="carrierDTO.carrierNames != null and carrierDTO.carrierNames.size > 0">
            and c.carrier_name IN
            <foreach collection="carrierDTO.carrierNames" item="name" open="(" separator="," close=")">
                #{name}
            </foreach>
        </if>
        <if test="carrierDTO.activeFlag != null">
            and c.active_flag = #{carrierDTO.activeFlag}
        </if>
    </select>
    <select id="listCarrierLogisticsCost" resultMap="carrierLogisticsCostMap">
        SELECT dc.carrier_code,
               dc.volume_conversion,
               dc.template_code,
               dft.valuation_type,
               dft.valuation_uom,
               dftd.template_detail_id,
               dftd.region_code,
               dftd.first_piece_weight,
               dftd.first_price,
               dftd.next_piece_weight,
               dftd.next_price
        FROM o2md_carrier dc
                     JOIN o2md_freight_template dft
                ON dft.template_code = dc.template_code AND dft.tenant_id = dc.tenant_id
                     JOIN o2md_freight_tpl_detail dftd ON dftd.template_id = dft.template_id
        <where>
            <choose>
                <when test="tenantId != null">
                    AND dc.tenant_id = #{tenantId}
                </when>
                <otherwise>
                    AND 1 = 0
                </otherwise>
            </choose>
            <if test="carrierCodeList != null and carrierCodeList.size() != 0">
                AND dc.carrier_code IN
                <foreach collection="carrierCodeList" open="(" separator="," close=")" item="item">
                    #{item}
                </foreach>
            </if>
        </where>
    </select>
</mapper>
