<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.o2.metadata.console.infra.mapper.CarrierMapper">
    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap id="BaseResultMap" type="org.o2.metadata.console.infra.entity.Carrier">
        <result column="carrier_id" property="carrierId" jdbcType="DECIMAL"/>
        <result column="carrier_code" property="carrierCode" jdbcType="VARCHAR"/>
        <result column="carrier_name" property="carrierName" jdbcType="VARCHAR"/>
        <result column="carrier_type_code" property="carrierTypeCode" jdbcType="VARCHAR"/>
        <result column="active_flag" property="activeFlag" jdbcType="DECIMAL"/>
        <result column="OBJECT_VERSION_NUMBER" property="objectVersionNumber" jdbcType="DECIMAL"/>
        <result column="CREATION_DATE" property="creationDate" jdbcType="TIMESTAMP"/>
        <result column="CREATED_BY" property="createdBy" jdbcType="DECIMAL"/>
        <result column="LAST_UPDATED_BY" property="lastUpdatedBy" jdbcType="DECIMAL"/>
        <result column="LAST_UPDATE_DATE" property="lastUpdateDate" jdbcType="TIMESTAMP"/>
        <result column="tenant_id" property="tenantId" jdbcType="DECIMAL"/>
        <result column="delivery_region_type_code" property="deliveryRegionTypeCode" jdbcType="VARCHAR"/>
        <result column="priority" property="priority" jdbcType="DECIMAL"/>
    </resultMap>

    <select id="listCarrier" resultType="org.o2.metadata.console.infra.entity.Carrier">
        <bind name="lang" value="@io.choerodon.mybatis.helper.LanguageHelper@language()"/>
        SELECT c.carrier_id,
               c.carrier_code,
               ct.carrier_name,
               c.carrier_type_code,
               c.OBJECT_VERSION_NUMBER,
               c.active_flag,
               c.delivery_region_type_code,
               c.priority,
               c.tenant_id
        FROM o2md_carrier c
                left join o2md_carrier_tl ct
                on ct.carrier_id = c.carrier_id and ct.lang = #{lang} and ct.tenant_id = c.tenant_id
                where 1 = 1
        <choose>
            <when test="siteFlag != null and siteFlag == 1">
                <choose>
                    <when test="carrier.tenantId != null">
                        AND c.tenant_id = #{carrier.tenantId}
                    </when>
                    <otherwise>
                        AND 1 = 1
                    </otherwise>
                </choose>
            </when>
            <otherwise>
                <choose>
                    <when test="carrier.tenantId != null">
                        AND (c.tenant_id = #{carrier.tenantId} OR c.tenant_id = 0)
                    </when>
                    <otherwise>
                        AND 1 =0
                    </otherwise>
                </choose>
            </otherwise>
        </choose>
        <if test="carrier.carrierId != null">
            and c.carrier_id = #{carrier.carrierId}
        </if>
        <if test="carrier.carrierCode != null and carrier.carrierCode != ''">
            <bind name="carrierCodeLike" value="'%' + carrier.carrierCode + '%'"/>
            and c.carrier_code like #{carrierCodeLike}
        </if>
        <if test="carrier.carrierName != null and carrier.carrierName != ''">
            <bind name="carrierNameLike" value="'%' + carrier.carrierName + '%'"/>
            and ct.carrier_name like #{carrierNameLike}
        </if>
        <if test="carrier.carrierTypeCode != null and carrier.carrierTypeCode != ''">
            and c.carrier_type_code = #{carrier.carrierTypeCode}
        </if>
        <if test="carrier.carrierCodes != null and carrier.carrierCodes.size() > 0">
            and c.carrier_code IN
            <foreach collection="carrierCodes" item="code" open="(" separator="," close=")">
                #{code}
            </foreach>
        </if>
        <if test="carrier.activeFlag != null">
            and c.active_flag = #{carrier.activeFlag}
        </if>
        /* 去重 */
        <if test="carrier.tenantId != null and carrier.tenantId != 0">
            AND c.carrier_id NOT IN (
                SELECT c1.carrier_id
                FROM o2md_carrier c1
                WHERE c1.tenant_id = 0
                AND EXISTS(
                    SELECT 1
                    FROM o2md_carrier c2
                    WHERE c1.carrier_code = c2.carrier_code
                    AND c2.tenant_id = #{carrier.tenantId}
                )
            )
        </if>
    </select>
    <select id="batchSelect" resultType="org.o2.metadata.console.infra.entity.Carrier">
        <bind name="lang" value="@io.choerodon.mybatis.helper.LanguageHelper@language()"/>
        SELECT c.carrier_code,
               c.carrier_type_code,
               c.active_flag,
               c.priority,
               c.tenant_id,
               tl.carrier_name
        FROM o2md_carrier c
                     left join o2md_carrier_tl tl
                on tl.carrier_id = c.carrier_id and tl.tenant_id = c.tenant_id AND tl.lang = #{lang}
                WHERE 1 = 1
        <choose>
            <when test="tenantId != null">
                AND (c.tenant_id = #{tenantId} OR c.tenant_id = 0)
            </when>
            <otherwise>
                AND 1 = 0
            </otherwise>
        </choose>
        <if test="carrierDTO.carrierCodes != null and carrierDTO.carrierCodes.size > 0">
            and c.carrier_code IN
            <foreach collection="carrierDTO.carrierCodes" item="code" open="(" separator="," close=")">
                #{code}
            </foreach>
        </if>
        <if test="carrierDTO.carrierNames != null and carrierDTO.carrierNames.size > 0">
            and c.carrier_name IN
            <foreach collection="carrierDTO.carrierNames" item="name" open="(" separator="," close=")">
                #{name}
            </foreach>
        </if>
        <if test="carrierDTO.activeFlag != null">
            and c.active_flag = #{carrierDTO.activeFlag}
        </if>
        /* 去重 */
        <if test="tenantId != null and tenantId != 0">
            AND c.carrier_id NOT IN (
                SELECT c1.carrier_id
                FROM o2md_carrier c1
                WHERE c1.tenant_id = 0
                AND EXISTS(
                    SELECT 1
                    FROM o2md_carrier c2
                    WHERE c1.carrier_code = c2.carrier_code
                    AND c2.tenant_id = #{tenantId}
                )
            )
        </if>
    </select>
</mapper>
