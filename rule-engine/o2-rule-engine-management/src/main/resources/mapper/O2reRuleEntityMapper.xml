<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.o2.rule.engine.management.infra.mapper.O2reRuleEntityMapper">
    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap id="BaseResultMap" type="org.o2.rule.engine.management.domain.entity.RuleEntity">
        <result column="rule_entity_id" property="ruleEntityId" jdbcType="DECIMAL"/>
        <result column="rule_entity_code" property="ruleEntityCode" jdbcType="VARCHAR"/>
        <result column="rule_entity_name" property="ruleEntityName" jdbcType="VARCHAR"/>
        <result column="rule_entity_alias" property="ruleEntityAlias" jdbcType="VARCHAR"/>
        <result column="description" property="description" jdbcType="VARCHAR"/>
        <result column="enable_flag" property="enableFlag" jdbcType="DECIMAL"/>
        <result column="tenant_id" property="tenantId" jdbcType="DECIMAL"/>
        <result column="created_by" property="createdBy" jdbcType="DECIMAL"/>
        <result column="last_updated_by" property="lastUpdatedBy" jdbcType="DECIMAL"/>
        <result column="creation_date" property="creationDate" jdbcType="DATE"/>
        <result column="last_update_date" property="lastUpdateDate" jdbcType="DATE"/>
        <result column="object_version_number" property="objectVersionNumber" jdbcType="DECIMAL"/>
    </resultMap>

    <select id="selectList" resultMap="BaseResultMap">
        SELECT
        re.rule_entity_id,
        re.rule_entity_code,
        re.rule_entity_name,
        re.rule_entity_alias,
        re.description,
        re.enable_flag,
        re.tenant_id,
        re.object_version_number
        FROM
        o2re_rule_entity re
        <where>
            <choose>
                <when test="tenantId != null">
                    and re.tenant_id = #{tenantId}
                </when>
                <otherwise>
                    AND 1 = 0
                </otherwise>
            </choose>
            <if test="ruleEntityId != null">
                and re.rule_entity_id = #{ruleEntityId}
            </if>
            <if test="ruleEntityCode != null and ruleEntityCode != ''">
                <bind name="ruleEntityCodeLike" value="'%' + ruleEntityCode + '%'"/>
                and re.rule_entity_code like #{ruleEntityCodeLike}
            </if>
            <if test="ruleEntityName != null and ruleEntityName != ''">
                <bind name="ruleEntityNameLike" value="'%' + ruleEntityName + '%'"/>
                and re.rule_entity_name like #{ruleEntityNameLike}
            </if>
            <if test="ruleEntityAlias != null and ruleEntityAlias != ''">
                <bind name="ruleEntityAliasLike" value="'%' + ruleEntityAlias + '%'"/>
                and re.rule_entity_alias like #{ruleEntityAliasLike}
            </if>
            <if test="enableFlag != null">
                and re.enable_flag = #{enableFlag}
            </if>
        </where>
    </select>

</mapper>