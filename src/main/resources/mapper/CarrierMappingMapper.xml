<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.o2.metadata.infra.mapper.CarrierMappingMapper">
    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap id="BaseResultMap" type="org.o2.metadata.domain.entity.CarrierMapping">
        <result column="carrier_mapping_id" property="carrierMappingId" jdbcType="DECIMAL"/>
        <result column="catalog_code" property="catalogCode" jdbcType="VARCHAR"/>
        <result column="carrier_id" property="carrierId" jdbcType="DECIMAL"/>
        <result column="platform_carrier_code" property="platformCarrierCode" jdbcType="VARCHAR"/>
        <result column="platform_carrier_Name" property="platformCarrierName" jdbcType="VARCHAR"/>
        <result column="OBJECT_VERSION_NUMBER" property="objectVersionNumber" jdbcType="DECIMAL"/>
        <result column="CREATION_DATE" property="creationDate" jdbcType="TIMESTAMP"/>
        <result column="CREATED_BY" property="createdBy" jdbcType="DECIMAL"/>
        <result column="LAST_UPDATED_BY" property="lastUpdatedBy" jdbcType="DECIMAL"/>
        <result column="LAST_UPDATE_DATE" property="lastUpdateDate" jdbcType="TIMESTAMP"/>
    </resultMap>

    <resultMap id="carrierMappingVO" type="org.o2.metadata.domain.vo.CarrierMappingVO" extends="BaseResultMap">
        <result column="carrier_code" property="carrierCode" jdbcType="VARCHAR"/>
        <result column="carrier_name" property="carrierName" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="listCarrierMappingByCondition" resultType="org.o2.metadata.domain.vo.CarrierMappingVO">
        SELECT
        cm.carrier_mapping_id,
        cm.catalog_code,
        cm.carrier_id,
        c.carrier_code,
        c.carrier_name,
        cm.platform_carrier_code,
        cm.platform_carrier_name,
        cm.object_version_number,
        cm.creation_date,
        cm.created_by,
        cm.last_updated_by,
        cm.last_update_date
        FROM
        o2md_carrier_mapping cm
        JOIN o2md_carrier c ON c.carrier_id = cm.carrier_id
        where
        1 = 1
        <if test="catalogCode!=null and catalogCode!=''">
            AND cm.catalog_code = #{catalogCode}
        </if>
        <if test="carrierCode!=null and carrierCode!=''">
            AND c.carrier_code LIKE concat("%",concat(#{carrierCode}),"%")
        </if>
        <if test="platformCarrierCode != null and platformCarrierCode != ''">
            <bind name="platformCarrierCodeLike" value="'%' + platformCarrierCode + '%'"/>
            and cm.platform_carrier_code like #{platformCarrierCodeLike}
        </if>
        ORDER BY cm.catalog_code, c.carrier_code
    </select>
</mapper>